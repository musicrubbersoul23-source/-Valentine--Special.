<body>
    <div class="container" id="card">
        <img id="gif" src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOHpndW1yZHF4ZzVqbm9pZHF4ZzVqbm9pZHF4ZzVqbm9pZHF4ZyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/cLS1cfxvGOPVpf9g3y/giphy.gif">
        <h1 id="text">Will you be my Valentine?</h1>
        <div class="buttons">
            <button id="yesBtn" onclick="nextPage()">Yes</button>
            <button id="noBtn" onmouseover="move()" ontouchstart="move()">No</button>
        </div>
    </div>

    <script>
        function move() {
            const card = document.getElementById('card');
            const noBtn = document.getElementById('noBtn');
            
            // Keeps button within the white card boundaries
            const x = Math.random() * (card.offsetWidth - noBtn.offsetWidth);
            const y = Math.random() * (card.offsetHeight - noBtn.offsetHeight);
            
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
        }

        function nextPage() {
            document.getElementById('text').innerHTML = "I knew it! ‚ù§Ô∏è";
            document.getElementById('gif').src = "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOHpndW1yZHF4ZzVqbm9pZHF4ZzVqbm9pZHF4ZzVqbm9pZHF4ZyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/KztT2c4u8mYYUiMKdJ/giphy.gif";
            document.querySelector('.buttons').style.display = 'none';
        }
    </script>
